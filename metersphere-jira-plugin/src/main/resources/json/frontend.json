{
  "serviceIntegration": {
    "label": "Jira",
    "image": "/static/index.png",
    "tips": "私有化部署选择 Basic Auth 填写账号密码，选择 Bearer Token 填写 Token </br> SaaS 版本只能选择 Basic Auth，填写（账号 + 密码）或者（账号+令牌）(账户设置-安全-创建API令牌)",
    "formItems": [
      {
        "name": "authType",
        "type": "select",
        "defaultValue": "basic",
        "required": true,
        "i18n": true,
        "options": [
          {
            "text": "Basic Auth",
            "value": "basic"
          },
          {
            "text": "Bearer Token",
            "value": "bearer"
          }
        ],
        "label": "api_test.definition.request.verification_method"
      },
      {
        "name": "account",
        "type": "input",
        "defaultValue": "",
        "required": true,
        "i18n": true,
        "displayConditions": {
          "field": "authType",
          "value": "basic"
        },
        "label": "organization.integration.account",
        "message": "organization.integration.input_api_account"
      },
      {
        "name": "password",
        "type": "password",
        "defaultValue": "",
        "required": true,
        "i18n": true,
        "displayConditions": {
          "field": "authType",
          "value": "basic"
        },
        "label": "organization.integration.password",
        "message": "organization.integration.input_api_password"
      },
      {
        "name": "token",
        "type": "password",
        "defaultValue": "",
        "required": true,
        "i18n": true,
        "displayConditions": {
          "field": "authType",
          "value": "bearer"
        },
        "label": "Token",
        "message": "organization.integration.input_token"
      },
      {
        "name": "url",
        "type": "input",
        "defaultValue": "",
        "required": true,
        "i18n": true,
        "label": "organization.integration.jira_url",
        "message": "organization.integration.input_jira_url"
      }
    ]
  },

  "projectConfig": {
    "formItems": [
      {
        "name": "jiraKey",
        "type": "input",
        "defaultValue": "",
        "required": true,
        "i18n": true,
        "label": "project.jira_key",
        "withProjectCheck": true,
        "instructionsIcon": "/static/jira-key.png"
      },
      {
        "name": "jiraIssueTypeId",
        "type": "select",
        "defaultValue": "",
        "required": true,
        "i18n": true,
        "cascade": "jiraKey",
        "optionMethod": "getIssueTypes",
        "label": "organization.integration.jira_issuetype"
      },
      {
        "name": "jiraStoryTypeId",
        "type": "select",
        "defaultValue": "",
        "required": true,
        "i18n": true,
        "cascade": "jiraKey",
        "optionMethod": "getIssueTypes",
        "label": "organization.integration.jira_storytype"
      }
    ]
  },

  "accountConfig": {
    "label": "organization.integration.jira_information",
    "instructionsInfo": "organization.integration.jira_prompt_information",
    "i18n": true,
    "formItems": [
      {
        "name": "authType",
        "type": "select",
        "defaultValue": "basic",
        "required": false,
        "i18n": true,
        "options": [
          {
            "text": "Basic Auth",
            "value": "basic"
          },
          {
            "text": "Bearer Token",
            "value": "bearer"
          }
        ],
        "label": "api_test.definition.request.verification_method"
      },
      {
        "name": "jiraAccount",
        "type": "input",
        "defaultValue": "",
        "required": false,
        "i18n": true,
        "displayConditions": {
          "field": "authType",
          "value": "basic"
        },
        "label": "organization.integration.account",
        "message": "organization.integration.input_api_account"
      },
      {
        "name": "jiraPassword",
        "type": "password",
        "defaultValue": "",
        "required": false,
        "i18n": true,
        "displayConditions": {
          "field": "authType",
          "value": "basic"
        },
        "label": "organization.integration.password",
        "message": "organization.integration.input_api_password"
      },
      {
        "name": "token",
        "type": "password",
        "defaultValue": "",
        "required": false,
        "i18n": true,
        "displayConditions": {
          "field": "authType",
          "value": "bearer"
        },
        "label": "Token",
        "message": "organization.integration.input_token"
      }
    ]
  }
